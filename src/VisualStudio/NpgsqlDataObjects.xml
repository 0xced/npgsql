<?xml version="1.0" encoding="utf-8" ?>
<DataObjectSupport xmlns="http://schemas.microsoft.com/VisualStudio/2007/07/Data/DataObjectSupport">
  <Types>
    <RootType>
      <Properties>
        <Property name="Server"/>
        <Property name="Login"/>
        <Property name="Database"/>
      </Properties>
      <Services>
        <Service type="IVsDataObjectSelector" implementationType="Microsoft.VisualStudio.Data.Framework.AdoDotNet.AdoDotNetRootObjectSelector">
          <!-- Map RootType properties to connection string keywords -->
          <Parameters method="SelectObjects">
            <Parameter>
              <Parameter value="Server">
                <Parameter value="Host"/>
              </Parameter>
              <Parameter value="Login">
                <Parameter value="UserName"/>
              </Parameter>
              <Parameter value="Database">
                <Parameter value="Database"/>
              </Parameter>
            </Parameter>
          </Parameters>
        </Service>
      </Services>
    </RootType>

    <Type name="Table" preferredOrdering="Database, Schema, Name">
      <Identifier>
        <Part name="Database"/>
        <Part name="Schema"/>
        <Part name="Name"/>
      </Identifier>
      <Properties>
        <Property name="Name" isIdentifierPart="true"/>
        <Property name="Schema" isIdentifierPart="true"/>
        <Property name="Type"/>
      </Properties>
      <Services>
        <Service type="IVsDataObjectSelector" implementationType="Microsoft.VisualStudio.Data.Framework.AdoDotNet.AdoDotNetObjectSelector"/>
      </Services>
    </Type>
  </Types>
</DataObjectSupport>